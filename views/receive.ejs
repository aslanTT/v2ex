<!DOCTYPE html>
<html>
  <head>
    <%- include('common/head') %>
  </head>
  <body>
    <div class="header section">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-offset-1 col-md-5">
          </div>
          <div class="col-xs-12 col-md-5">
            <%- include('common/header', {user_id: req.cookies.user_id}) %>
          </div>
        </div>
      </div>
    </div>
    <div class="main">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-offset-1 col-sm-7 col-md-offset-1 col-md-7 col-lg-offset-1 col-lg-7">
            <div class="section aside">
              <ul class="list-group">
                <li class="list-group-item">
                  <div class="user">
                    <div class="user-logo">
                      <img src="/images/1.jpg" width="50" height="50" alt="">
                    </div>
                    <div class="user-name">
                      <%= user.username %>
                    </div>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="new-topic">
                    <span class="glyphicon glyphicon-pencil"></span> &nbsp <a href="/publish">创作新主题</a>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="new-message">
                    <span class="glyphicon glyphicon-envelope"></span> &nbsp <a href="<%= '/message/' + user.user_id %>">发信</a>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="new-message">
                    <span class="glyphicon glyphicon-envelope"></span> &nbsp
                    <a href="/message/list">未读来信：<%= message.length %></a>
                  </div>
                </li>
                <li class="list-group-item">
                  <div class="user-money">
                    <span class="glyphicon glyphicon-usd"></span> &nbsp 金币：
                    <%= user.money %>
                  </div>
                </li>
              </ul>
            </div>
            <ul class="list-group">
              <% for(var i=0; i<message.length; i++){ %>
                <li class="list-group-item">
                  <div class="topic">
                    <div class="topic-logo">
                      <img src="/images/1.jpg" width="100%" height="100%" alt="">
                    </div>
                    <div class="topic-summary">
                      <p>
                        <%= message[i].title %>
                      </p>
                      <span><%= message[i].message_content %></span>
                    </div>
                  </div>
                </li>
              <% } %>
              <li class="list-group-item">
                <nav aria-label="Page navigation">
                  <ul class="pagination main">
                    <li>
                      <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                    <% for(var i=0; i<len; i++) { %>
                      <li><a href="<%= '/receive/' + req.params.id + '/page/' + (i+1)%>"><%= i+1 %></a></li>
                    <% } %>
                    <li>
                      <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                  </ul>
                </nav>
              </li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <div class="section aside">
              <%- include('common/hotTopic') %>
            </div>
            <div class="section aside">
              <%- include('common/newNode') %>
            </div>
            <div class="section aside">
              <%- include('common/siteCondition') %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="footer section">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-offset-2 col-md-3">

          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.bootcss.com/jquery/2.2.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.6/js/bootstrap.js"></script>
  </body>
</html>
