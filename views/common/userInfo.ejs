<% if(user !== null){ %>
<ul class="list-group">
  <li class="list-group-item">
    <div class="user">
      <div class="user-logo">
        <img src="/images/1.jpg" width="50" height="50" alt="">
      </div>
      <div class="user-name">
        <a href="<%= '/user/' + user.user_id %>">
          <%= user.username %>
        </a>
      </div>
    </div>
  </li>
  <li class="list-group-item">
    <div class="new-topic">
      <span class="glyphicon glyphicon-pencil"></span> &nbsp <a href="/publish">创作新主题</a>
    </div>
  </li>
  <li class="list-group-item">
    <div class="new-topic">
      <span class="glyphicon glyphicon-tag"></span> &nbsp <a href="/collection/node">节点收藏 / </a>
      <a href="/collection/topic">主题收藏 / </a>
      <a href="/collection/people">特别关注</a>
    </div>
  </li>
  <li class="list-group-item">
    <div class="new-message">
      <span class="glyphicon glyphicon-envelope"></span> &nbsp
      <a href="<%= '/receive/' + user.user_id%>">未读来信：<%= message.length %></a>
    </div>
  </li>
  <li class="list-group-item">
    <div class="user-money">
      <span class="glyphicon glyphicon-usd"></span> &nbsp 金币：
      <%= user.money %>
    </div>
  </li>
  <li class="list-group-item">
    <div class="user-money">
      <span class="glyphicon glyphicon-phone"></span> &nbsp
      <a href="/sign">签到</a>
    </div>
  </li>
</ul>
<% } else { %>
  <ul class="list-group">
    <li class="list-group-item">
      <div class="user">
        <div class="user-name">
          技术就是力量
        </div>
      </div>
    </li>
  </ul>
<% } %>
